@model TestWebApp.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register new user!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>RegisterUser</h3>

@using(Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data"} ))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <table>
        <tr><td><p>Email :</p></td><td> 
            @Html.EditorFor(u => u.Email) </td></tr>
        <tr><td><p>Password :</p></td><td> 
            @Html.EditorFor(u => u.Password) </td></tr>
        <tr><td><p>Confirm Password :</p></td><td> 
            @Html.EditorFor(u => u.ConfirmPassword) </td></tr>
        <tr><td><input type="submit" value="Register" /> </td><td></td></tr>
    </table>
}
